<%= simple_form_for([@journal, @entry]) do |f| %>

    <%= f.input :content %>
    <%= f.input :scope do %>
      <%= f.select :scope, [['daily'], ['monthly'], ['future']]%>
    <% end %>

    <%= f.input :entry_type do %>
      <%= f.select :entry_type, [['task', 1], ['event', 2], ['note', 3]]%>
    <% end %>

    <%= f.submit %>
<% end %>
