<!DOCTYPE html>
<html>
  <head>
    <title>RailsBulletJournal</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navbar">
      <%= link_to("Journals", journals_path) %>
      <% if @journal %>
        <%= link_to("Index & Future Log", future_path(@journal)) %>
      <% end %>
    </div>
      <%= yield %>
  </body>
</html>
